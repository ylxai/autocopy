
<Window x:Class="AutoCopy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="INSTUDIO FILES - By Irvannandika" 
        Height="700" 
        Width="1100"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter">

    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                   From="0" To="1" Duration="0:0:0.4"
                                   AccelerationRatio="0.3" DecelerationRatio="0.7"/>
                    <DoubleAnimation Storyboard.TargetProperty="(Window.RenderTransform).(ScaleTransform.ScaleX)"
                                   From="0.95" To="1" Duration="0:0:0.4"/>
                    <DoubleAnimation Storyboard.TargetProperty="(Window.RenderTransform).(ScaleTransform.ScaleY)"
                                   From="0.95" To="1" Duration="0:0:0.4"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.RenderTransform>
        <ScaleTransform ScaleX="1" ScaleY="1"/>
    </Window.RenderTransform>

    <Window.Resources>
        <!-- Smooth Tab Style -->
        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="Transparent" 
                                BorderThickness="0,0,0,3" 
                                BorderBrush="Transparent"
                                Padding="20,12"
                                Margin="0,0,8,0"
                                CornerRadius="8,8,0,0">
                            <ContentPresenter x:Name="ContentSite"
                                            ContentSource="Header"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextBlock.Foreground="{DynamicResource TabTextBrush}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource TabHoverBrush}"/>
                            </Trigger>
                            
                            <!-- Selected Effect -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#206C5CE7" Offset="0"/>
                                            <GradientStop Color="#106C5CE7" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource TabAccentBrush}"/>
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#6C5CE7" BlurRadius="12" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ContentSite" Property="TextBlock.Foreground" Value="{DynamicResource TabTextSelectedBrush}"/>
                                <Setter TargetName="ContentSite" Property="TextBlock.FontWeight" Value="Bold"/>
                            </Trigger>
                            
                            <!-- Selected + Hover Effect -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#306C5CE7" Offset="0"/>
                                            <GradientStop Color="#206C5CE7" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{DynamicResource TabTextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Modern Button Style with Animation -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <Border.Effect>
                                <DropShadowEffect x:Name="shadow" Color="#000000" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonHoverBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.05" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="shadow"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="12" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="shadow"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="8" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonPressedBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="0.95" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="0.95" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ButtonDisabledBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource FocusRingBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource FocusRingBrush}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <Border x:Name="checkBorder" 
                                    Width="20" Height="20" 
                                    Background="{DynamicResource TextBoxBackgroundBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}"
                                    BorderThickness="2"
                                    CornerRadius="4"
                                    Margin="0,0,8,0">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <TextBlock x:Name="checkMark" 
                                          Text="âœ“" 
                                          FontSize="14" 
                                          FontWeight="Bold"
                                          Foreground="{DynamicResource TabAccentBrush}"
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBorder" Property="Background" Value="#206C5CE7"/>
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="{DynamicResource TabAccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBorder" Property="BorderBrush" Value="{DynamicResource TabAccentBrush}"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="checkBorder"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1.1" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="checkBorder"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1.1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="checkBorder"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                           To="1" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="checkBorder"
                                                           Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                           To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ScrollBar Style -->
        <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="{DynamicResource ScrollBarBackgroundBrush}"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="MinWidth" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="6" Opacity="0.3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="{DynamicResource ScrollBarThumbBrush}"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border x:Name="ThumbBorder" 
                                                                   Background="{TemplateBinding Background}"
                                                                   CornerRadius="6"
                                                                   Margin="2">
                                                                <Border.RenderTransform>
                                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                                </Border.RenderTransform>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="ThumbBorder" Property="Background" Value="{DynamicResource ScrollBarThumbHoverBrush}"/>
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetName="ThumbBorder"
                                                                                               Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                               To="1.2" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>
                                                                    <Trigger.ExitActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetName="ThumbBorder"
                                                                                               Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                                                               To="1" Duration="0:0:0.2"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.ExitActions>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tab Content Animation -->
        <Style x:Key="AnimatedTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource TabBackgroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Tab Headers with smooth background -->
                            <Border Grid.Row="0" 
                                    Background="{DynamicResource TabHeaderBackgroundBrush}"
                                    BorderBrush="{DynamicResource TabHeaderBorderBrush}"
                                    BorderThickness="0,0,0,2"
                                    Padding="15,8">
                                <TabPanel IsItemsHost="True" Background="Transparent"/>
                            </Border>
                            
                            <!-- Tab Content with fade animation -->
                            <Border Grid.Row="1" 
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0">
                                <ContentPresenter x:Name="PART_SelectedContentHost" 
                                                ContentSource="SelectedContent">
                                    <ContentPresenter.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                   From="0" To="1" 
                                                                   Duration="0:0:0.3"
                                                                   AccelerationRatio="0.2"
                                                                   DecelerationRatio="0.8"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </ContentPresenter.Triggers>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="10"
                  Background="{DynamicResource WindowBackgroundBrush}"
                  CanContentScroll="False"
                  PanningMode="VerticalOnly"
                  IsDeferredScrollingEnabled="False">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
        </ScrollViewer.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Modern Header -->
            <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
                    BorderBrush="{DynamicResource HeaderBorderBrush}" BorderThickness="0,0,0,1">
                <Grid Height="70">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- App Branding -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                        <!-- Creative Multi-Layer Logo -->
                        <Grid Width="48" Height="48" Margin="0,0,18,0">
                            <!-- Outer Glow Ring -->
                            <Ellipse Width="48" Height="48" Fill="Transparent" Stroke="#FF6C5CE7" StrokeThickness="2" Opacity="0.4">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FF6C5CE7" BlurRadius="18" ShadowDepth="0" Opacity="0.7"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            
                            <!-- Main Logo Background -->
                            <Border CornerRadius="24" Width="40" Height="40">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FF6C5CE7" Offset="0"/>
                                        <GradientStop Color="#FFA29BFE" Offset="0.4"/>
                                        <GradientStop Color="#FF74B9FF" Offset="0.7"/>
                                        <GradientStop Color="#FF00CEC9" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF000000" BlurRadius="6" ShadowDepth="2" Opacity="0.5"/>
                                </Border.Effect>
                            </Border>
                            
                            <!-- Central Icon -->
                            <Image Source="icon.ico" Width="32" Height="32" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image.Effect>
                                    <DropShadowEffect Color="#FF000000" BlurRadius="2" ShadowDepth="1" Opacity="0.8"/>
                                </Image.Effect>
                            </Image>
                            
                            <!-- Animated Sparkles -->
                            <Ellipse Width="7" Height="7" Fill="#FFFDCB6E" HorizontalAlignment="Right" 
                                    VerticalAlignment="Top" Margin="0,5,5,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FFFDCB6E" BlurRadius="6" ShadowDepth="0" Opacity="1"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            
                            <Ellipse Width="4" Height="4" Fill="#FFFF7675" HorizontalAlignment="Left" 
                                    VerticalAlignment="Bottom" Margin="7,0,0,7">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FFFF7675" BlurRadius="4" ShadowDepth="0" Opacity="0.9"/>
                                </Ellipse.Effect>
                            </Ellipse>
                        </Grid>
                        
                        <!-- Creative Typography -->
                        <StackPanel VerticalAlignment="Center">
                            <!-- Main Brand Name -->
                            <TextBlock FontSize="22" FontWeight="Black" VerticalAlignment="Center" FontFamily="Segoe UI Black">
                                <Run Text="IN" Foreground="#6C5CE7" FontSize="24"/><!--
                                --><Run Text="STUDIO" Foreground="#74B9FF" FontSize="24"/><!--
                                --><Run Text=" " Foreground="#FDCB6E" FontSize="14" BaselineAlignment="Center"/><!--
                                --><Run Text="FILES" Foreground="#00CEC9" FontSize="24"/>
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#FF000000" BlurRadius="1" ShadowDepth="1" Opacity="0.3"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            
                            <!-- Creative Tagline -->
                            <Border Background="#FF2D3436" CornerRadius="10" Padding="10,5" Margin="0,-5,0,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF000000" BlurRadius="4" ShadowDepth="2" Opacity="0.5"/>
                                </Border.Effect>
                                <TextBlock Text="By Irvannandika" FontSize="8" FontWeight="Bold" 
                                          Foreground="#FDCB6E" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Status Indicators -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border x:Name="iconSuccess" Background="#107C10" CornerRadius="4" 
                               Width="20" Height="20" Margin="0,0,6,0" Visibility="Collapsed">
                            <TextBlock Text="âœ“" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border x:Name="iconWarning" Background="#FF8C00" CornerRadius="4" 
                               Width="20" Height="20" Margin="0,0,6,0" Visibility="Collapsed">
                            <TextBlock Text="âš " Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border x:Name="iconError" Background="#D13438" CornerRadius="4" 
                               Width="20" Height="20" Margin="0,0,6,0" Visibility="Collapsed">
                            <TextBlock Text="âœ—" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Border x:Name="iconProcessing" Background="#0078D4" CornerRadius="4" 
                               Width="20" Height="20" Margin="0,0,6,0" Visibility="Collapsed">
                            <TextBlock Text="âŸ³" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Theme Toggle and Timer -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <TextBlock x:Name="txtTimer" Text="00:00:00" VerticalAlignment="Center" Margin="0,0,10,0" 
                                  FontFamily="Consolas" FontWeight="Bold"/>
                        <ToggleButton x:Name="btnThemeToggle" Width="48" Height="24" 
                                     Content="ðŸŒ™/â˜€ï¸" Click="BtnThemeToggle_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content with Tabs -->
            <TabControl Grid.Row="1" Style="{StaticResource AnimatedTabControl}">
                
                <!-- TAB 1: MAIN -->
                <TabItem Header="ðŸ“ Main" Style="{StaticResource ModernTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20" 
                                 CanContentScroll="False" PanningMode="VerticalOnly">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
                        </ScrollViewer.Resources>
                        <StackPanel>
                            <!-- Folder Selection -->
                            <Border Background="{DynamicResource GroupBoxBackgroundBrush}" 
                                   BorderBrush="{DynamicResource GroupBoxBorderBrush}" BorderThickness="1" 
                                   CornerRadius="6" Padding="20" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Source Folder -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ðŸ“¸ Source Folder:" 
                                              VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,8"/>
                                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtSourceFolder" IsReadOnly="True" 
                                            Background="{DynamicResource TextBoxBackgroundBrush}"
                                            Foreground="{DynamicResource PrimaryTextBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}" Margin="0,0,10,8" Height="32"/>
                                    <Button Grid.Row="0" Grid.Column="2" Content="Browse..." Click="BtnBrowseSource_Click" 
                                           Width="100" Height="32" Margin="0,0,0,8"/>

                                    <!-- Destination Folder -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="ðŸ’¾ Destination:" 
                                              VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtDestFolder" IsReadOnly="True" 
                                            Background="{DynamicResource TextBoxBackgroundBrush}"
                                            Foreground="{DynamicResource PrimaryTextBrush}"
                                            BorderBrush="{DynamicResource BorderBrush}" Margin="0,0,10,0" Height="32"/>
                                    <Button Grid.Row="1" Grid.Column="2" Content="Browse..." Click="BtnBrowseDest_Click" 
                                           Width="100" Height="32"/>
                                </Grid>
                            </Border>

                            <!-- File List Input -->
                            <Border Background="{DynamicResource GroupBoxBackgroundBrush}" 
                                   BorderBrush="{DynamicResource GroupBoxBorderBrush}" BorderThickness="1" 
                                   CornerRadius="6" Padding="20" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“‹ File List Input:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <RadioButton x:Name="radioFileMode" Content="ðŸ“„ From File (.txt)" IsChecked="True" 
                                                    Checked="RadioFileMode_Checked" Margin="0,0,20,0"/>
                                        <RadioButton x:Name="radioPasteMode" Content="ðŸ“‹ Paste Direct" 
                                                    Checked="RadioPasteMode_Checked"/>
                                    </StackPanel>
                                    
                                    <!-- File Mode Panel -->
                                    <Grid x:Name="panelFileMode">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="txtFileList" IsReadOnly="True"
                                                Background="{DynamicResource TextBoxBackgroundBrush}"
                                                Foreground="{DynamicResource PrimaryTextBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}" Margin="0,0,10,0"
                                                AllowDrop="True" Drop="TxtFileList_Drop" DragEnter="TxtFileList_DragEnter"/>
                                        <Button Grid.Column="1" Content="Browse..." Click="BtnBrowseFileList_Click" Width="100" Height="32"/>
                                    </Grid>
                                    
                                    <!-- Paste Mode Panel -->
                                    <Border x:Name="panelPasteMode" Visibility="Collapsed" Margin="0,10,0,0">
                                        <StackPanel>
                                            <TextBox x:Name="txtPasteList" MinHeight="120" MaxHeight="200"
                                                    Background="{DynamicResource TextBoxBackgroundBrush}"
                                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    TextWrapping="Wrap" AcceptsReturn="True" 
                                                    VerticalScrollBarVisibility="Auto"
                                                    TextChanged="TxtPasteList_TextChanged"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock x:Name="txtPasteCount" Text="0 files" FontSize="10" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="txtPasteInfo" Text="" FontSize="10" Margin="10,0,0,0" 
                                                          VerticalAlignment="Center" Foreground="{DynamicResource SecondaryTextBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Progress Section - Compact & Modern -->
                            <Border Background="{DynamicResource GroupBoxBackgroundBrush}" 
                                   BorderBrush="{DynamicResource GroupBoxBorderBrush}" BorderThickness="1" 
                                   CornerRadius="6" Padding="16" Margin="0,0,0,16">
                                <StackPanel>
                                    <!-- Header with Progress Bar -->
                                    <Grid Margin="0,0,0,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="ðŸ“Š Progress" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <Grid Grid.Column="1">
                                            <ProgressBar x:Name="progressBar" Height="20" Minimum="0" Maximum="100"/>
                                            <TextBlock x:Name="txtProgress" Text="0%" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center" FontWeight="Bold" FontSize="11"/>
                                        </Grid>
                                        <TextBlock Grid.Column="2" x:Name="txtCurrentFile" Text="" FontStyle="Italic" 
                                                  TextTrimming="CharacterEllipsis" MaxWidth="250" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center" FontSize="10" Opacity="0.7"/>
                                    </Grid>

                                    <!-- Compact Stats Grid -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Row 1: Files Stats -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                            <Border Background="#1B5E20" CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="âœ“" FontWeight="Bold" Foreground="White" FontSize="11" Margin="0,0,4,0"/>
                                                    <TextBlock x:Name="txtFound" Text="0" FontWeight="Bold" Foreground="White" FontSize="11"/>
                                                </StackPanel>
                                            </Border>
                                            <Border Background="#B71C1C" CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="âœ—" FontWeight="Bold" Foreground="White" FontSize="11" Margin="0,0,4,0"/>
                                                    <TextBlock x:Name="txtNotFound" Text="0" FontWeight="Bold" Foreground="White" FontSize="11"/>
                                                </StackPanel>
                                            </Border>
                                            <Border Background="#0D47A1" CornerRadius="4" Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸ“Š" FontSize="10" Margin="0,0,4,0"/>
                                                    <TextBlock x:Name="txtTotal" Text="0" FontWeight="Bold" Foreground="White" FontSize="11"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        
                                        <!-- Row 2: Transfer Info -->
                                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="âš¡" FontSize="11" Margin="0,0,4,0" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="txtSpeed" Text="0 MB/s" FontWeight="SemiBold" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="â€¢" Opacity="0.5" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                            <TextBlock x:Name="txtBytesInfo" Text="0 MB / 0 MB" FontSize="10" VerticalAlignment="Center" Opacity="0.8"/>
                                        </StackPanel>
                                        
                                        <!-- Row 3: Time Info -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Border Background="#E65100" CornerRadius="4" Padding="8,4" Margin="0,0,6,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="â­ï¸" FontSize="10" Margin="0,0,4,0"/>
                                                    <TextBlock x:Name="txtSkipped" Text="0" FontWeight="Bold" Foreground="White" FontSize="11"/>
                                                </StackPanel>
                                            </Border>
                                            <Border Background="#424242" CornerRadius="4" Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="â±ï¸" FontSize="10" Margin="0,0,4,0"/>
                                                    <TextBlock x:Name="txtETA" Text="--:--:--" FontWeight="Bold" Foreground="White" FontSize="10"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Action Buttons -->
                            <Border Background="{DynamicResource GroupBoxBackgroundBrush}" 
                                   BorderBrush="{DynamicResource GroupBoxBorderBrush}" BorderThickness="1" 
                                   CornerRadius="6" Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Grid.Column="0" x:Name="btnStart" Content="â–¶ï¸ Start Copy" Click="BtnStart_Click" 
                                           Background="#107C10" Foreground="White" 
                                           FontWeight="Bold" Margin="0,0,5,0" Height="40"/>
                                    <Button Grid.Column="1" x:Name="btnStop" Content="â¹ï¸ Stop" Click="BtnStop_Click" 
                                           IsEnabled="False" 
                                           Background="#D13438" Foreground="White" Margin="5,0,5,0" Height="40"/>
                                    <Button Grid.Column="2" Content="ðŸ” Preview" x:Name="btnPreview" Click="BtnPreview_Click" 
                                           Margin="5,0,5,0" Height="40"/>
                                    <Button Grid.Column="3" Content="ðŸ“„ Export Not Found" x:Name="btnExportNotFound" Click="BtnExportNotFound_Click" 
                                           IsEnabled="False" Margin="5,0,0,0" Height="40"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- TAB 2: SETTINGS -->
                <TabItem Header="âš™ï¸ Settings" Style="{StaticResource ModernTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20"
                                 CanContentScroll="False" PanningMode="VerticalOnly">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
                        </ScrollViewer.Resources>
                        <StackPanel>
                            <!-- Performance Settings -->
                            <Border Background="{DynamicResource GroupBoxBackgroundBrush}" 
                                   BorderBrush="{DynamicResource GroupBoxBorderBrush}" BorderThickness="1" 
                                   CornerRadius="6" Padding="20" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="ðŸš€ Performance" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                    
                                    <CheckBox x:Name="chkParallelCopy" Content="Enable Multi-threaded Copy" 
                                             IsChecked="True" Margin="0,0,0,12" 
                                             Checked="ChkParallelCopy_Checked" Unchecked="ChkParallelCopy_Unchecked"/>
                                    
                                    <Grid Margin="20,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Threads:" VerticalAlignment="Center"/>
                                        <Slider Grid.Column="1" x:Name="sliderThreads" Minimum="1" Maximum="10" Value="4" 
                                               IsSnapToTickEnabled="True" TickFrequency="1" 
                                               ValueChanged="SliderThreads_ValueChanged" Margin="10,0"/>
                                        <TextBlock Grid.Column="2" x:Name="txtThreadCount" Text="4 threads" 
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Verification Settings -->
                            <Border Background="{DynamicResource GroupBoxBackgroundBrush}" 
                                   BorderBrush="{DynamicResource GroupBoxBorderBrush}" BorderThickness="1" 
                                   CornerRadius="6" Padding="20" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ”’ File Verification" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                    
                                    <CheckBox x:Name="chkEnableVerification" Content="Verify file integrity after copy" 
                                             IsChecked="True" Margin="0,0,0,12"
                                             Checked="ChkEnableVerification_Checked" Unchecked="ChkEnableVerification_Unchecked"/>

                                    <Grid x:Name="panelVerificationSettings" Margin="20,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Method:" VerticalAlignment="Center" Margin="0,0,10,8"/>
                                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbVerificationMethod" SelectedIndex="1" 
                                                 Margin="0,0,0,8" Background="{DynamicResource ComboBoxBackgroundBrush}"
                                                 Foreground="{DynamicResource ComboBoxForegroundBrush}"
                                                 BorderBrush="{DynamicResource ComboBoxBorderBrush}">
                                            <ComboBoxItem Content="âš¡ Fast (Size only)"/>
                                            <ComboBoxItem Content="âœ… Standard (Size + Date)"/>
                                            <ComboBoxItem Content="ðŸ”’ Complete (MD5 Hash)"/>
                                        </ComboBox>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="On Failure:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbVerificationFailure" SelectedIndex="0"
                                                 Background="{DynamicResource ComboBoxBackgroundBrush}"
                                                 Foreground="{DynamicResource ComboBoxForegroundBrush}"
                                                 BorderBrush="{DynamicResource ComboBoxBorderBrush}">
                                            <ComboBoxItem Content="ðŸ”„ Retry automatically"/>
                                            <ComboBoxItem Content="âš ï¸ Log and continue"/>
                                            <ComboBoxItem Content="ðŸ›‘ Stop operation"/>
                                        </ComboBox>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Matching Options -->
                            <Border Background="{DynamicResource GroupBoxBackgroundBrush}" 
                                   BorderBrush="{DynamicResource GroupBoxBorderBrush}" BorderThickness="1" 
                                   CornerRadius="6" Padding="20" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="ðŸ” Matching Options" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,12"/>
                                    
                                    <CheckBox x:Name="chkIgnoreExtension" Content="Ignore file extension when matching" 
                                             IsChecked="False" Margin="0,0,0,8"/>
                                    
                                    <CheckBox x:Name="chkCaseInsensitive" Content="Case-insensitive matching" 
                                             IsChecked="True" Margin="0,0,0,8"/>
                                    
                                    <CheckBox x:Name="chkSkipExisting" Content="Skip files that already exist" 
                                             IsChecked="False" Margin="0,0,0,12"/>
                                    
                                    <Grid Margin="0,8,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="Duplicate Handling:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <ComboBox Grid.Column="1" x:Name="cmbDuplicateHandling" SelectedIndex="0"
                                                 Background="{DynamicResource ComboBoxBackgroundBrush}"
                                                 Foreground="{DynamicResource ComboBoxForegroundBrush}"
                                                 BorderBrush="{DynamicResource ComboBoxBorderBrush}">
                                            <ComboBoxItem Content="Skip (don't copy if exists)"/>
                                            <ComboBoxItem Content="Rename (add number suffix)"/>
                                            <ComboBoxItem Content="Overwrite (replace existing)"/>
                                        </ComboBox>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- TAB 3: LOGS -->
                <TabItem Header="ðŸ“Š Logs" Style="{StaticResource ModernTabItem}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Log Controls -->
                        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
                               BorderBrush="{DynamicResource HeaderBorderBrush}" BorderThickness="0,0,0,1" 
                               Padding="20,12">
                            <Grid HorizontalAlignment="Right" Width="250">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="ðŸ—‘ï¸ Clear Log" Click="BtnClearLog_Click" Height="36" Margin="0,0,4,0"/>
                                <Button Grid.Column="1" Content="ðŸ’¾ Save Log" Click="BtnSaveLog_Click" Height="36" Margin="4,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Log Content -->
                        <Border Grid.Row="1" Background="{DynamicResource LogBackgroundBrush}" Margin="0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                         CanContentScroll="False" PanningMode="VerticalOnly">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
                                </ScrollViewer.Resources>
                                <TextBox x:Name="txtLog" IsReadOnly="True" TextWrapping="Wrap" 
                                        FontFamily="Consolas" FontSize="11" BorderThickness="0"
                                        Background="Transparent" Foreground="{DynamicResource PrimaryTextBrush}"
                                        Padding="12"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- TAB 4: FILTERS -->
<TabItem Header="ðŸ” Filters" Style="{StaticResource ModernTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20"
                                 CanContentScroll="False" PanningMode="VerticalOnly">
                        <ScrollViewer.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource ModernScrollBar}"/>
                        </ScrollViewer.Resources>
                        <StackPanel>
                            <Border Background="{DynamicResource GroupBoxBackgroundBrush}" 
                                   BorderBrush="{DynamicResource GroupBoxBorderBrush}" BorderThickness="1" 
                                   CornerRadius="6" Padding="20">
                                <StackPanel>
                                    <CheckBox x:Name="chkEnableFilters" Content="ðŸ” Enable Advanced Filtering" 
                                             FontWeight="SemiBold" FontSize="14" 
                                             Checked="ChkEnableFilters_Checked" Unchecked="ChkEnableFilters_Unchecked"/>
                                    
                                    <Grid x:Name="panelFilters" Margin="20,10,0,0" IsEnabled="False">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                                            <TextBlock Text="File Extensions:" Margin="0,0,0,5"/>
                                            <TextBox x:Name="txtExtensionFilter" 
                                                    Background="{DynamicResource TextBoxBackgroundBrush}"
                                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    ToolTip="jpg,png,raw,tiff (comma separated)"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                            <TextBlock Text="Size (MB): Min:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox x:Name="txtMinSize" Text="0" Width="60" Margin="0,0,10,0"/>
                                            <TextBlock Text="Max:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                            <TextBox x:Name="txtMaxSize" Text="1000" Width="60"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </ScrollViewer>
</Window>
