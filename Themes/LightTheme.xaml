<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Colors -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="GroupBoxBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ExpanderBackgroundBrush" Color="#F0F4FF"/>
    <SolidColorBrush x:Key="InfoBarBackgroundBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="LogBackgroundBrush" Color="#FFFFFF"/>
    
    <!-- Foreground/Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#666666"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#FFFFFF"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="GroupBoxBorderBrush" Color="#DDDDDD"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#004275"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="#CCCCCC"/>
    
    <!-- Special Buttons -->
    <SolidColorBrush x:Key="DangerButtonBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="DangerButtonHoverBrush" Color="#D32F2F"/>
    <SolidColorBrush x:Key="SuccessButtonBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="WarningButtonBrush" Color="#FF9800"/>
    <SolidColorBrush x:Key="PurpleButtonBrush" Color="#7B1FA2"/>
    
    <!-- Statistics Card Colors -->
    <SolidColorBrush x:Key="SuccessCardBrush" Color="#E8F5E9"/>
    <SolidColorBrush x:Key="InfoCardBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="WarningCardBrush" Color="#FFF3E0"/>
    <SolidColorBrush x:Key="ErrorCardBrush" Color="#FFEBEE"/>
    
    <!-- Windows 11 Style Header -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="#E1DFDD"/>
    
    <!-- Tab Colors - Enhanced Modern -->
    <SolidColorBrush x:Key="TabBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabSelectedBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="TabHoverBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="TabBorderBrush" Color="#E1DFDD"/>
    <SolidColorBrush x:Key="TabHeaderBackgroundBrush" Color="#FAFAFA"/>
    <SolidColorBrush x:Key="TabHeaderBorderBrush" Color="#E5E5E5"/>
    <SolidColorBrush x:Key="TabAccentBrush" Color="#6C5CE7"/>
    <SolidColorBrush x:Key="TabTextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="TabTextSelectedBrush" Color="#000000"/>
    <SolidColorBrush x:Key="TabGlowBrush" Color="#A29BFE"/>
    
    <!-- MacOS Style Toggle Colors -->
    <SolidColorBrush x:Key="ToggleTrackBrush" Color="#E5E5EA"/>
    <SolidColorBrush x:Key="ToggleTrackCheckedBrush" Color="#34C759"/>
    <SolidColorBrush x:Key="ToggleThumbBrush" Color="#FFFFFF"/>
    
    <!-- ComboBox Colors -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#24292F"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#D0D7DE"/>
    <SolidColorBrush x:Key="ComboBoxDropdownBrush" Color="#F6F8FA"/>
    
    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="DataGridRowHoverBrush" Color="#E3F2FD"/>
    <SolidColorBrush x:Key="DataGridRowSelectedBrush" Color="#BBDEFB"/>
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="#DDDDDD"/>
    
    <!-- ProgressBar Colors -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#4CAF50"/>
    
    <!-- Enhanced UI Colors -->
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#C1C1C1"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#A8A8A8"/>
    
    <!-- Shadow & Glow Colors -->
    <SolidColorBrush x:Key="ShadowBrush" Color="#000000"/>
    <SolidColorBrush x:Key="GlowBrush" Color="#6C5CE7"/>
    <SolidColorBrush x:Key="AccentGlowBrush" Color="#A29BFE"/>
    
    <!-- Hover & Active States -->
    <SolidColorBrush x:Key="HoverOverlayBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ActiveOverlayBrush" Color="#EEEEEE"/>
    <SolidColorBrush x:Key="PressedOverlayBrush" Color="#E0E0E0"/>
    
    <!-- Input Focus Colors -->
    <SolidColorBrush x:Key="FocusRingBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="#0078D4"/>
    
</ResourceDictionary>
