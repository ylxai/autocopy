<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Dark Theme Colors -->
    
    <!-- Background Colors - Modern Dark -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="GroupBoxBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="ExpanderBackgroundBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="InfoBarBackgroundBrush" Color="#0969DA"/>
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="LogBackgroundBrush" Color="#0D1117"/>
    
    <!-- Foreground/Text Colors - Modern Dark -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#F0F6FC"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#7D8590"/>
    <SolidColorBrush x:Key="AccentTextBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="HeaderTextBrush" Color="#FFFFFF"/>
    
    <!-- Border Colors - Modern Dark -->
    <SolidColorBrush x:Key="BorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="GroupBoxBorderBrush" Color="#30363D"/>
    
    <!-- Button Colors -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#1E88E5"/>
    <SolidColorBrush x:Key="ButtonPressedBrush" Color="#1565C0"/>
    <SolidColorBrush x:Key="ButtonDisabledBrush" Color="#4A4A4A"/>
    
    <!-- Special Buttons -->
    <SolidColorBrush x:Key="DangerButtonBrush" Color="#EF5350"/>
    <SolidColorBrush x:Key="DangerButtonHoverBrush" Color="#F44336"/>
    <SolidColorBrush x:Key="SuccessButtonBrush" Color="#66BB6A"/>
    <SolidColorBrush x:Key="WarningButtonBrush" Color="#FFA726"/>
    <SolidColorBrush x:Key="PurpleButtonBrush" Color="#AB47BC"/>
    
    <!-- Statistics Card Colors -->
    <SolidColorBrush x:Key="SuccessCardBrush" Color="#1B5E20"/>
    <SolidColorBrush x:Key="InfoCardBrush" Color="#0D47A1"/>
    <SolidColorBrush x:Key="WarningCardBrush" Color="#E65100"/>
    <SolidColorBrush x:Key="ErrorCardBrush" Color="#B71C1C"/>
    
    <!-- Windows 11 Style Header -->
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="HeaderBorderBrush" Color="#3F3F46"/>
    
    <!-- Tab Colors - Enhanced Modern -->
    <SolidColorBrush x:Key="TabBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="TabSelectedBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="TabHoverBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="TabBorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="TabHeaderBackgroundBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="TabHeaderBorderBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="TabAccentBrush" Color="#6C5CE7"/>
    <SolidColorBrush x:Key="TabTextBrush" Color="#F0F6FC"/>
    <SolidColorBrush x:Key="TabTextSelectedBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabGlowBrush" Color="#A29BFE"/>
    
    <!-- MacOS Style Toggle Colors -->
    <SolidColorBrush x:Key="ToggleTrackBrush" Color="#3A3A3C"/>
    <SolidColorBrush x:Key="ToggleTrackCheckedBrush" Color="#0A84FF"/>
    <SolidColorBrush x:Key="ToggleThumbBrush" Color="#FFFFFF"/>
    
    <!-- ComboBox Colors -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="ComboBoxForegroundBrush" Color="#F0F6FC"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="ComboBoxDropdownBrush" Color="#161B22"/>
    
    <!-- DataGrid Colors -->
    <SolidColorBrush x:Key="DataGridBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#3E3E42"/>
    <SolidColorBrush x:Key="DataGridRowHoverBrush" Color="#3A3A3F"/>
    <SolidColorBrush x:Key="DataGridRowSelectedBrush" Color="#094771"/>
    <SolidColorBrush x:Key="DataGridBorderBrush" Color="#3F3F46"/>
    
    <!-- ProgressBar Colors -->
    <SolidColorBrush x:Key="ProgressBarBackgroundBrush" Color="#3C3C3C"/>
    <SolidColorBrush x:Key="ProgressBarForegroundBrush" Color="#66BB6A"/>
    
    <!-- Enhanced UI Colors -->
    <SolidColorBrush x:Key="ScrollBarBackgroundBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="ScrollBarThumbBrush" Color="#484F58"/>
    <SolidColorBrush x:Key="ScrollBarThumbHoverBrush" Color="#6E7681"/>
    
    <!-- Shadow & Glow Colors -->
    <SolidColorBrush x:Key="ShadowBrush" Color="#000000"/>
    <SolidColorBrush x:Key="GlowBrush" Color="#6C5CE7"/>
    <SolidColorBrush x:Key="AccentGlowBrush" Color="#A29BFE"/>
    
    <!-- Hover & Active States -->
    <SolidColorBrush x:Key="HoverOverlayBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="ActiveOverlayBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="PressedOverlayBrush" Color="#161B22"/>
    
    <!-- Input Focus Colors -->
    <SolidColorBrush x:Key="FocusRingBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="SelectionBrush" Color="#0969DA"/>
    
</ResourceDictionary>
