<Window x:Class="AutoCopy.Windows.ResumeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“ Resume Copy Operation" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        ShowInTaskbar="False">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" CornerRadius="8" Padding="15" Margin="0,0,0,15"
                Background="{DynamicResource AccentBrush}">
            <StackPanel>
                <TextBlock FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center">
                    <Run Text="ðŸ”„"/> 
                    <Run Text="Resume Copy Operation"/>
                </TextBlock>
                <TextBlock FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"
                          Text="AutoCopy detected an interrupted copy operation"/>
            </StackPanel>
        </Border>

        <!-- Session Info -->
        <GroupBox Grid.Row="1" Header="ðŸ“Š Session Information" Margin="0,0,0,15"
                  BorderBrush="{DynamicResource BorderBrush}"
                  Background="{DynamicResource ControlBackgroundBrush}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Started:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Name="txtStartTime" VerticalAlignment="Center"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Source Folder:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Name="txtSourceFolder" VerticalAlignment="Center" 
                          TextWrapping="Wrap" Foreground="{DynamicResource AccentBrush}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Destination:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Name="txtDestinationFolder" VerticalAlignment="Center" 
                          TextWrapping="Wrap" Foreground="{DynamicResource AccentBrush}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Progress:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Name="txtProgress" VerticalAlignment="Center" 
                          Foreground="{DynamicResource SuccessBrush}" FontWeight="SemiBold"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Data Processed:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Name="txtDataProcessed" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>

        <!-- File Status Details -->
        <GroupBox Grid.Row="2" Header="ðŸ“ File Status Details" 
                  BorderBrush="{DynamicResource BorderBrush}"
                  Background="{DynamicResource ControlBackgroundBrush}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Statistics -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="5" Padding="10" Margin="2"
                            Background="{DynamicResource SuccessBrush}" Opacity="0.1">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Name="txtCompletedCount" FontSize="24" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="{DynamicResource SuccessBrush}"/>
                            <TextBlock Text="âœ… Completed" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" CornerRadius="5" Padding="10" Margin="2"
                            Background="{DynamicResource WarningBrush}" Opacity="0.1">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Name="txtSkippedCount" FontSize="24" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="{DynamicResource WarningBrush}"/>
                            <TextBlock Text="â­ï¸ Skipped" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" CornerRadius="5" Padding="10" Margin="2"
                            Background="{DynamicResource ErrorBrush}" Opacity="0.1">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Name="txtFailedCount" FontSize="24" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="{DynamicResource ErrorBrush}"/>
                            <TextBlock Text="âŒ Failed" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" CornerRadius="5" Padding="10" Margin="2"
                            Background="{DynamicResource AccentBrush}" Opacity="0.1">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Name="txtRemainingCount" FontSize="24" FontWeight="Bold" 
                                      HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}"/>
                            <TextBlock Text="â³ Remaining" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="1" Name="progressBarResume" Height="30" 
                            Background="{DynamicResource ControlBackgroundBrush}"
                            Foreground="{DynamicResource AccentBrush}"
                            Margin="0,10,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Warning Message -->
        <Border Grid.Row="3" CornerRadius="8" Padding="12" Margin="0,15,0,15"
                Background="{DynamicResource WarningBrush}" Opacity="0.1"
                BorderBrush="{DynamicResource WarningBrush}" BorderThickness="1">
            <StackPanel>
                <TextBlock FontWeight="SemiBold" Foreground="{DynamicResource WarningBrush}">
                    <Run Text="âš ï¸"/>
                    <Run Text="Important Notes:"/>
                </TextBlock>
                <TextBlock Margin="0,5,0,0" TextWrapping="Wrap" FontSize="12">
                    â€¢ Resume will continue from where the operation was interrupted<LineBreak/>
                    â€¢ Files already copied will be verified before skipping<LineBreak/>
                    â€¢ Original settings and filters will be restored<LineBreak/>
                    â€¢ You can cancel anytime during resume operation
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Info Text -->
            <TextBlock Grid.Column="0" VerticalAlignment="Center" FontStyle="Italic" 
                      Text="Choose an action to proceed with the interrupted operation"
                      Foreground="{DynamicResource TextBrush}"/>

            <!-- Buttons -->
            <Button Grid.Column="1" Name="btnResume" Content="ðŸ”„ Resume" 
                    Width="100" Height="35" Margin="10,0,10,0"
                    Background="{DynamicResource SuccessBrush}"
                    Foreground="White" FontWeight="SemiBold"
                    Click="BtnResume_Click"/>

            <Button Grid.Column="2" Name="btnRestart" Content="ðŸ”„ Restart" 
                    Width="100" Height="35" Margin="0,0,10,0"
                    Background="{DynamicResource WarningBrush}"
                    Foreground="White" FontWeight="SemiBold"
                    Click="BtnRestart_Click"/>

            <Button Grid.Column="3" Name="btnCancel" Content="âŒ Cancel" 
                    Width="100" Height="35"
                    Background="{DynamicResource ErrorBrush}"
                    Foreground="White" FontWeight="SemiBold"
                    Click="BtnCancel_Click"/>
        </Grid>
    </Grid>
</Window>
